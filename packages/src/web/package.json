{
	"name": "@arenarium/maps-web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 8080 --host",
		"build": "vite build",
		"preview": "pnpm run build && wrangler pages dev",
		"sync": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:cf-migrate-dev": "wrangler d1 migrations apply arenarium-maps-db --local",
		"db:cf-migrate-production": "wrangler d1 migrations apply arenarium-maps-db --remote",
		"deploy": "pnpm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types && move worker-configuration.d.ts src/"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250603.0",
		"@eslint/compat": "^1.2.9",
		"@eslint/js": "^9.28.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-cloudflare": "^7.0.3",
		"@sveltejs/kit": "^2.21.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.1",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.33.14",
		"svelte-check": "^4.2.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1",
		"vite": "^6.3.5",
		"wrangler": "^4.18.0"
	},
	"dependencies": {
		"@arenarium/maps": "latest",
		"@better-fetch/fetch": "^1.1.18",
		"@workspace/shared": "workspace:*",
		"better-auth": "^1.2.8",
		"drizzle-orm": "^0.40.1",
		"highlight.js": "^11.11.1",
		"zod": "^3.25.49"
	}
}
