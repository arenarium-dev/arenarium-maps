{
	"name": "@arenarium/maps",
	"version": "1.0.129",
	"license": "MIT",
	"author": "arenarium.dev",
	"description": "The best way to visualize ranked popups on a map.",
	"homepage": "https://arenarium.dev",
	"keywords": [
		"arenarium",
		"maps",
		"svelte"
	],
	"type": "module",
	"main": "./dist/main.cjs.js",
	"module": "./dist/main.es.js",
	"svelte": "./dist/main.es.js",
	"types": "./dist/index.d.ts",
	"unpkg": "./dist/index.js",
	"jsdelivr": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/main.es.js",
			"import": "./dist/main.es.js",
			"require": "./dist/main.cjs.js"
		},
		"./maplibre": {
			"svelte": "./dist/maplibre.es.js",
			"import": "./dist/maplibre.es.js",
			"require": "./dist/maplibre.cjs.js"
		},
		"./dist/style.css": {
			"import": "./dist/style.css",
			"require": "./dist/style.css"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@eslint/js": "^9.28.0",
		"@rollup/plugin-typescript": "^12.1.2",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.21.4",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@workspace/shared": "workspace:*",
		"dts-bundle-generator": "^9.5.1",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.2",
		"globals": "^16.2.0",
		"less": "^4.3.0",
		"maplibre-gl": "^5.6.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"svelte": "^5.34.1",
		"svelte-check": "^4.2.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.0",
		"vite": "^6.3.5",
		"vite-plugin-dts": "^4.5.4",
		"zod": "^3.25.63"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"scripts": {
		"dev": "vite dev --host",
		"dev-browser": "vite dev --mode browser --host",
		"build:vite:modular": "vite build -c ./vite/modular/vite.config.ts",
		"build:vite:browser": "vite build -c ./vite/browser/vite.config.ts",
		"build:types": "dts-bundle-generator --export-referenced-types --umd-module-name=arenarium -o ./dist/index.d.ts ./src/lib/index.ts",
		"build": "pnpm run build:vite:browser && pnpm run build:vite:modular && pnpm run build:types",
		"preview": "vite preview",
		"build-patch-commit-publish": "pnpm run build && pnpm version patch && git add * && git commit -m 'Publish' && pnpm publish --access public",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	}
}
