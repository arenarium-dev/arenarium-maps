{
	"name": "@arenarium/maps",
	"version": "1.0.111",
	"license": "MIT",
	"author": "arenarium.dev",
	"description": "The best way to visualize ranked data on a map.",
	"homepage": "https://arenarium.dev",
	"keywords": [
		"arenarium",
		"maps",
		"svelte"
	],
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"svelte": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./dist/style.css": {
			"import": "./dist/style.css",
			"require": "./dist/style.css"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@eslint/js": "^9.28.0",
		"@rollup/plugin-typescript": "^12.1.2",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@workspace/shared": "workspace:*",
		"dts-bundle-generator": "^9.5.1",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"globals": "^16.2.0",
		"less": "^4.3.0",
		"maplibre-gl": "^5.5.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"svelte": "^5.33.10",
		"svelte-check": "^4.2.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite": "^6.3.5",
		"vite-plugin-dts": "^4.5.4",
		"zod": "^3.25.42"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"scripts": {
		"dev": "vite dev --host",
		"dev-browser": "vite dev --mode browser --host",
		"build:vite": "vite build -c vite.build.config.ts",
		"build:types": "dts-bundle-generator --export-referenced-types --umd-module-name=arenarium -o ./dist/index.d.ts ./src/lib/index.ts",
		"build": "pnpm run build:vite && pnpm run build:types",
		"preview": "vite preview",
		"build-patch-commit-publish": "pnpm run build && pnpm version patch && git add * && git commit -m 'Publish' && pnpm publish --access public",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	}
}
