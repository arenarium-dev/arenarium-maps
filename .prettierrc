{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 128,
	"tabWidth": 4,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
            "files": "*.md",
            "options": {
                "tabWidth": 2
            }
        }
	]
}
